[run]
source = scripts/telegram
omit =
    */tests/*
    */__pycache__/*
    */venv/*
    */opt/venv/*
    */.venv/*

[report]
precision = 2
show_missing = True
skip_covered = False

# Exclude common boilerplate
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod

[html]
directory = htmlcov

[xml]
output = coverage.xml
